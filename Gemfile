source "https://rubygems.org"

# Jekyll itself (use the same version as GitHub Pages)
gem "jekyll", "~> 3.10.0"

# GitHub Pages gem - ensures the same environment as GitHub Pages
gem "github-pages", group: :jekyll_plugins

# Minima theme (optional, include if you are using the Minima theme)
gem "jekyll-theme-minimal", "~> 0.2.0"
